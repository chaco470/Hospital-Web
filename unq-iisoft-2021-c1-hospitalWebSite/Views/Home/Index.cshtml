@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home Page";
    string user = this.Context.Session.GetString("UsuarioLogueado");
}

@if (string.IsNullOrEmpty(user))
{
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Imagenes/Favaloro.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block" id="carousel-text">
                    <h3>Nuestro Fundador</h3>
                    <p>René Favaloro (1923-2000)</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Imagenes/Instalaciones.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block" id="carousel-text">
                    <h3>Instalaciones</h3>
                    <p>Nuestras instalaciones estan basadas en la comodidad de nuestros pacientes</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Imagenes/Cuidados-y-Síntomas-Coronavirus.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

}
else
{
    <div class="container">
        <div class="d-flex p-2 bd-highlight title-page">Bienvenido @ViewBag.NombreUsuario</div>

        <div>
            <div class="card-group">
                @foreach (var nota in ViewBag.Notas)
                {

                    <div class="card">
                        <img src=@nota.URLImagen class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@nota.Titulo</h5>
                            <p class="card-text">@nota.Cuerpo</p>
                            <a class="btn btn-dark" href=@nota.URLNotaCompleta target="_blank" role="button">Ver Más</a>
                            <p class="card-text"><small class="text-muted">@nota.Fecha</small></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}